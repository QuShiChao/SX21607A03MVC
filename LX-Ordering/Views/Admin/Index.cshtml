@model IEnumerable<LX_Ordering.Models.OrderInfo>
@{
    Layout = "~/Views/AdminPage1.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-home"></i>
            </span>
            乐享订餐
        </h3>
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    <span></span>Overview
                    <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                </li>
            </ul>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-danger card-img-holder text-white">
                <div class="card-body">
                    <img src="~/ClassAdmin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                    <h4 class="font-weight-normal mb-3">
                        每周销售
                        <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                    </h4>
                    <h2 class="mb-5">$ 15,0000</h2>
                    <h6 class="card-text">增加 60%</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-info card-img-holder text-white">
                <div class="card-body">
                    <img src="~/ClassAdmin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                    <h4 class="font-weight-normal mb-3">
                        每周订单
                        <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                    </h4>
                    <h2 class="mb-5">45,6334</h2>
                    <h6 class="card-text">增加 10%</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4 stretch-card grid-margin">
            <div class="card bg-gradient-success card-img-holder text-white">
                <div class="card-body">
                    <img src="~/ClassAdmin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                    <h4 class="font-weight-normal mb-3">
                        在线访客
                        <i class="mdi mdi-diamond mdi-24px float-right"></i>
                    </h4>
                    <h2 class="mb-5">95,5741</h2>
                    <h6 class="card-text">增加 5%</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">订单</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        用户
                                    </th>
                                    <th>
                                        菜品
                                    </th>
                                    <th>
                                        总价
                                    </th>
                                    <th>
                                        订购类型
                                    </th>
                                    <th>
                                        联系方式
                                    </th>
                                    <th>
                                        订购状态
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            <img src="~/ClassAdmin/images/faces/face1.jpg" class="mr-2" alt="image">
                                            @item.Client.HeadImage
                                            @item.Client.Name
                                        </td>
                                        <td>
                                            <label class="badge badge-gradient-success">@item.Dish.Name</label>
                                        </td>
                                        <td>
                                            @item.Total
                                        </td>
                                        <td>
                                            @if ((item.OrderType) == 0)
                                            {
                                                <label class="badge badge-gradient-warning">订餐</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-gradient-danger">就餐</label>
                                            }
                                        </td>
                                        <td>
                                            @item.Client.Tel
                                        </td>
                                        <td>
                                            @if ((item.Status) == 0)
                                            {
                                                <label style="color:#808080">未付款</label>
                                            }
                                            else if ((item.Status) == 1)
                                            {
                                                <label>已付款</label>
                                            }
                                            else if ((item.Status) == 2)
                                            {
                                                <label>运输中</label>
                                            }
                                            else if ((item.Status) == 3)
                                            {
                                                <label>未评价</label>
                                            }
                                            else if ((item.Status) == 4)
                                            {
                                                <label>已评价</label>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img src="~/ClassAdmin/images/faces/face2.jpg" class="mr-2" alt="image">
                                            Stella Johnson
                                        </td>
                                        <td>
                                            High loading time
                                        </td>
                                        <td></td>
                                        <td>
                                            Dec 12, 2017
                                        </td>
                                        <td>
                                            WD-12346
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img src="~/ClassAdmin/images/faces/face3.jpg" class="mr-2" alt="image">
                                            Marina Michel
                                        </td>
                                        <td>
                                            Website down for one week
                                        </td>
                                        <td>
                                            <label class="badge badge-gradient-info">ON HOLD</label>
                                        </td>
                                        <td>
                                            Dec 16, 2017
                                        </td>
                                        <td>
                                            WD-12347
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img src="~/ClassAdmin/images/faces/face4.jpg" class="mr-2" alt="image">
                                            John Doe
                                        </td>
                                        <td>
                                            Loosing control on server
                                        </td>
                                        <td></td>
                                        <td>
                                            Dec 3, 2017
                                        </td>
                                        <td>
                                            WD-12348
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


